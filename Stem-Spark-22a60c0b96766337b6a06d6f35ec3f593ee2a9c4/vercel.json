{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "flask-mail-service/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/email/(.*)",
      "dest": "/flask-mail-service/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "flask-mail-service/app.py": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_SITE_URL": "@site-url",
    "NEXT_PUBLIC_APP_URL": "@app-url"
  }
} 